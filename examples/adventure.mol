
import lib.libcore

class Input {
    let mut stopflag: Bool = false

    fn new(self) { }

    fn loop(self) {
        while not self.stopflag {
            println("> ")
            let input = readline()

            if input == "quit" then {
                self.stopflag = true;
            }
            else {
                println(input);
            }
        }
    }
}

let input = new Input()
input.loop()

